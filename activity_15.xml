<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity15">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Login"
       android:textStyle="bold"
       android:textColor="@color/black"
       android:textSize="40sp"
       android:layout_marginVertical="50dp"
       android:layout_marginHorizontal="30dp"></TextView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Address/Mobile Number"
        android:textSize="18sp"
        android:id="@+id/email1"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_marginVertical="160dp"
        android:layout_marginHorizontal="30dp"></TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColorHint="@color/cardview_shadow_start_color"
        android:textSize="18sp"
        android:backgroundTint="@color/black"
       android:layout_marginVertical="190dp"
        android:textColorHighlight="@color/black"
        android:cursorVisible="true"
        android:textCursorDrawable="@color/black"
        android:layout_marginHorizontal="30dp"
        android:hint="@string/login1"
        android:textColor="@color/black"></EditText>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="18sp"
        android:id="@+id/pass1"
        android:textStyle="normal"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        android:layout_marginVertical="260dp"
        android:layout_marginHorizontal="30dp"></TextView>



   <EditText
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text=""
     android:textColorHint="@color/cardview_shadow_start_color"
     android:textSize="18sp"
     android:backgroundTint="@color/black"
     android:layout_marginVertical="290dp"
     android:textColorHighlight="@color/black"
     android:cursorVisible="true"
       android:textStyle="bold"
     android:textCursorDrawable="@color/black"
     android:layout_marginHorizontal="30dp"
     android:hint="@string/login2"
     android:textColor="@color/black"></EditText>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textStyle="normal"
        android:layout_marginVertical="340dp"
        android:layout_marginLeft="210dp"
        android:textSize="16sp"
        android:textColor="@color/teal_700"></TextView>

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:background="@drawable/btncolor"
        android:id="@+id/btnlog"
        android:layout_marginVertical="400dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:text="LOGIN"
        android:textSize="20dp"></Button>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or login with"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        android:layout_marginVertical="480dp"
        android:layout_centerHorizontal="true"></TextView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/google"
        android:layout_marginVertical="510dp"
        android:layout_marginHorizontal="90dp"></de.hdodenhof.circleimageview.CircleImageView>


     <de.hdodenhof.circleimageview.CircleImageView
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:src="@drawable/fb"
         android:layout_marginVertical="510dp"
         android:layout_marginHorizontal="165dp"></de.hdodenhof.circleimageview.CircleImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/twitter"
        android:layout_marginVertical="510dp"
        android:layout_marginHorizontal="255dp"></de.hdodenhof.circleimageview.CircleImageView>

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="You Dont Have an account?"
     android:textSize="16sp"
     android:textColor="@color/teal_700"
     android:layout_marginVertical="600dp"
     android:layout_marginHorizontal="60dp"></TextView>

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="SIGN UP"
     android:textColor="@color/black"
     android:layout_marginVertical="600dp"
     android:textStyle="bold"
     android:layout_marginHorizontal="260dp"></TextView>

 <ImageView
     android:layout_width="50dp"
     android:layout_height="50dp"
     android:src="@drawable/ic_hide"
    android:layout_marginVertical="290dp"
    android:layout_marginHorizontal="300dp"></ImageView>

</RelativeLayout>