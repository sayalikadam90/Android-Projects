<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity12">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/s6"
        android:src="@drawable/ic_person2"
        app:civ_border_width="2dp"
        app:civ_border_overlay="true"
        app:civ_border_color="@color/white"
       android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        app:civ_circle_background_color="@color/cardview_shadow_start_color"></de.hdodenhof.circleimageview.CircleImageView>

     <de.hdodenhof.circleimageview.CircleImageView
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:src="@drawable/ic_search1"
         app:civ_border_color="@color/white"
         app:civ_circle_background_color="@color/cardview_shadow_start_color"
         app:civ_border_overlay="true"
         app:civ_border_width="2dp"
         android:layout_marginTop="5dp"
         android:layout_marginHorizontal="80dp"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginHorizontal="150dp"
        android:layout_marginVertical="10dp"></TextView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_person1"
        app:civ_border_width="2dp"
        app:civ_border_overlay="true"
        app:civ_circle_background_color="@color/cardview_shadow_start_color"
        app:civ_border_color="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="250dp"></de.hdodenhof.circleimageview.CircleImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_chat"
        app:civ_border_color="@color/white"
        app:civ_circle_background_color="@color/cardview_shadow_start_color"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="310dp"></de.hdodenhof.circleimageview.CircleImageView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/s2"></ListView>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/black"
      android:layout_marginTop="580dp">

      <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:layout_marginLeft="5dp"
          android:src="@drawable/ic_location1"></ImageView>

      <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:layout_marginLeft="27dp"
          android:src="@drawable/ic_chat1"></ImageView>

      <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@drawable/ic_camera"
        android:layout_marginLeft="27dp"></ImageView>

     <ImageView
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:src="@drawable/ic_group1"
        android:layout_marginLeft="27dp"></ImageView>

      <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@drawable/ic_play"
         android:layout_marginLeft="27dp"></ImageView>

  </LinearLayout>







</RelativeLayout>