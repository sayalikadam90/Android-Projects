<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/box"
    tools:context=".Activity14">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Favourite Search Engine"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:id="@+id/check"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"></TextView>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Google"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginVertical="80dp"
        android:id="@+id/check1"></CheckBox>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bing"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_marginVertical="110dp"
        android:id="@+id/check2"></CheckBox>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="140dp"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:id="@+id/check3"
        android:text="Yahoo"></CheckBox>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Result"
        android:layout_marginVertical="200dp"
        android:id="@+id/btncheck"></Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:layout_marginVertical="260dp"
        android:id="@+id/txtresult"
        android:layout_marginHorizontal="20dp"
        android:textSize="25dp"></TextView>
</RelativeLayout>